@model PagedList.IPagedList<education.Models.content>
@using PagedList.Mvc;

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "News";
}
<head>
    <script>
        function OnDeleteClick(e) {

            var flag = confirm('You are about to delete Category ID ' + e + ' permanently.Are you sure you want to delete this record?');

            if (flag) {

                $.ajax({

                    url: '/News/DeleteNews',

                    type: 'POST',

                    data: { id: e },

                    dataType: 'json',

                    success: function (result) {
                        alert(result);
                        $("#" + e).parent().parent().remove();
                    },

                    error: function () { alert('Xảy ra lỗi!'); }

                });

            }

            return false;

        }
    </script>
</head>
<div class="module">
    <div class="module-head">
        <h3>Quản lý tin tức</h3>
    </div>
    <div class="module-body">

        <p>
            <strong>Thêm tin mới</strong>
        </p>
        <div class="controls">
            <button type="button" class="btn" onclick="window.location.href = '/Admin/News/Create'">New</button>
            <!--<button type='submit' name='btn1' class="btn">Edit</button>
            <button type='submit' name='btn2' class="btn" onclick="return DelProduct();">Delete</button>-->
            <br />
            <br />
            <table class="table table-striped table-bordered table-condensed" id="myTable">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Introtext</th>
                        <th>Created By</th>
                        <th width="15%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td> @row.title</td>
                            <td> @row.category.title</td>
                            <td> <div style="white-space: nowrap; width: 18em; overflow: hidden;text-overflow: ellipsis;">@row.introtext</div></td>
                            <td> @row.create_by</td>
                            <td>
                                <button type="button" class="btn" onclick="window.location.href = '/Admin/News/Edit/@row.id'">Edit</button>
                                <button type="button" class="btn" onclick="return OnDeleteClick(@row.id);" id="@row.id">Delete</button>

                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="6">
                            <ul class="women_pagenation dc_paginationA dc_paginationA06">                                
                                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                                @Html.PagedListPager(Model, page => Url.Action("ListNews", new { page }))
                                </ul>
</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
