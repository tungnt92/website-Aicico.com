@model education.Models.user

@{
    ViewBag.Title = "Login";
    Layout = "";
}
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/assets/admin/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/admin/bootstrap/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="~/assets/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/assets/admin/css/theme.css">
    <script src="~/scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="index.html">
                    Administrator
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">

                    <ul class="nav pull-right">

                        <li>
                            <a href="#">
                                Sign Up
                            </a>
                        </li>



                        <li>
                            <a href="#">
                                Forgot your password?
                            </a>
                        </li>
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div>
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">
                    @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                        <div class="module-head">
                            <h3>Sign In</h3>
                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    @Html.TextBoxFor(x => x.email, new { @placeholder = "Enter your email", @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.email)
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    @Html.PasswordFor(m => m.password, new { @placeholder="Enter your password",@class = "span12" })
                                    @Html.ValidationMessageFor(m => m.password)
                                </div>
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right">Login</button>
                                    <label class="checkbox">
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2014 Design And Code By <a href="mailto:nguyeentung@gmail.com">Tung Ngu..</a></b>All rights reserved.
        </div>
    </div>
</body>